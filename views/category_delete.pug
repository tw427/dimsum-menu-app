extends layout 

block content 
  h1 #{title}: #{category.name}

  if category_dishes.length 

    p #[strong Delete the following dishes before attempting to delete this Category.]

    div(style="margin-left:20px;margin-top:20px;")

      h4 Dishes
      
      dl 
        each category in category_dishes
          dt 
            a(href=dish.url) #{dish.name} 
          dd #{dish.description} 
          dd #{dish.price} 
  else 
    p Do you really want to delete this Category?

    form(method="POST" action="")
      div.form-group
        input#categoryid.form-control(type="hidden", name="categoryid", required="true", value=category._id)
      
      button.btn.btn-primary(type='submit') Delete